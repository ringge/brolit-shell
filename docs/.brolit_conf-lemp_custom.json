        ],
        "cockpit": [
            {
                "status": "disabled",
                "config": [
                    {
                        "subdomain": "",
                        "port": "9090"
                    }
                ]
            }
        ],
        "custom": [
            {
                "status": "enabled",
                "config": [
                    {
                        "lynis": "true",
                        "clamav": "true"
                    }
                ]
            }
        ]
    }
}